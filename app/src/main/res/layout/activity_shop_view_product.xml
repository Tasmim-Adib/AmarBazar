<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopViewProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:id="@+id/shop_product_details_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shop_product_details_product_id"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:id="@+id/shop_product_details_type"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#D1064C"
                        android:id="@+id/shop_product_details_price"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#B36B12"
                        android:visibility="gone"
                        android:id="@+id/shop_product_details_discount_price"
                        />


                </LinearLayout>



            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Availability"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="#036B04"
                    android:layout_centerInParent="true"
                    android:id="@+id/shop_product_details_availability"
                    />
                <View
                    android:visibility="gone"
                    android:id="@+id/lineViewShop1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@id/shop_product_details_availability"
                    android:background="@android:color/black"
                    />

                <View
                    android:visibility="gone"
                    android:id="@+id/lineViewShop2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/shop_product_details_availability"
                    android:background="@android:color/black"/>
            </RelativeLayout>




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/shop_size_quantity_layout"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sizes"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="10dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="100dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/first_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/first_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="150dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/second_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/second_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="145dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/third_size"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/third_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout

                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fourth_size"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fourth_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout

                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/fifth_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/fifth_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/sixth_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/sixth_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/seventh_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/seventh_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/eight_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/eight_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nine_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/nine_size_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="140dp"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:text="Add to the Existing Product"
                    android:textColor="@color/colorAccent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@id/tvText"
                    android:background="@android:color/black"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/tvText"
                    android:background="@android:color/black"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
                    <Spinner

                        android:id="@+id/shop_product_details_spinner_size"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/custom_edit_text"
                        android:entries="@array/T_shirt"
                        android:spinnerMode="dialog" />
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:hint="Quantity"
                        android:padding="10dp"
                        android:background="@drawable/custom_edit_text"
                        android:layout_gravity="end"
                        android:layout_marginStart="20dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/shop_product_details_quantity_editText"
                        />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Ok"
                        android:background="#028102"
                        android:layout_marginStart="15dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/shop_product_details_ok_Button"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/white"
                    android:text="@string/updatebtn"
                    android:id="@+id/shop_product_update_btn"
                    />
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/white"
                    android:text="Mark As Discount"
                    android:id="@+id/shop_product_mark_discount_Btn"
                    />
                <Button
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/white"
                    android:text="Discounted Product"
                    android:id="@+id/shop_product_mark_discount_done_Btn"
                    />
            </LinearLayout>

           <LinearLayout
               android:layout_width="300dp"
               android:layout_gravity="center_horizontal"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <EditText
                   android:visibility="gone"
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:hint="Current Price"
                   android:textColor="@android:color/black"
                   android:id="@+id/discount_price_edit_Text"
                   />
               <Button
                    android:visibility="gone"
                   android:layout_width="60dp"
                   android:layout_height="40dp"
                   android:text="Done"
                   android:layout_marginStart="20dp"
                   android:background="#028102"

                   android:textColor="@android:color/black"
                   android:id="@+id/discount_price_done_btn"
                   />
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>